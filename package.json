{
  "name": "site",
  "version": "1.0.0",
  "description": "[![Netlify Status](https://api.netlify.com/api/v1/badges/9f870e7c-beb9-4575-b378-92c773a65353/deploy-status)](https://app.netlify.com/sites/carterworks/deploys)",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carterworks/site.git"
  },
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "prettier --check \"src/**/*.js\""
  },
  "dependencies": {
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "@snowpack/plugin-build-script": "^2.1.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "prettier": "^2.2.1",
    "snowpack": "^3.0.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.html": "prettier --write",
    "*.css": "prettier --write"
  }
}
